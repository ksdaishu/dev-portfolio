<h1> Ruby on Rails Portfolio Items </h1>


<% @portfolio_items.each do |portfolio_item| %>
<%= link_to portfolio_item.title ,portfolio_show_path(portfolio_item)%>
<p><%= portfolio_item.title %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body%></p>
<p><%= image_tag portfolio_item.main_image unless portfolio_item.main_image.nil?%></p>
<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.main_image.nil?%></p>
<%= link_to "Edit" ,portfolio_edit_path(portfolio_item)%>
<%= link_to 'Destroy', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
